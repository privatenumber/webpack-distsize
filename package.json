{
  "name": "webpack-distsize",
  "version": "0.1.0",
  "description": "Track Webpack output size via version control",
  "keywords": [
    "webpack",
    "distsize",
    "distribution",
    "size"
  ],
  "files": [
    "lib",
    "bin"
  ],
  "main": "lib",
  "scripts": {
    "test": "jest",
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint -- --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "bin": {
    "distsize": "/bin/distsize.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/privatenumber/webpack-distsize.git"
  },
  "author": "Hiroki Osame <hiroki.osame@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/privatenumber/webpack-distsize/issues"
  },
  "homepage": "https://github.com/privatenumber/webpack-distsize#readme",
  "devDependencies": {
    "eslint": "^7.18.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "memfs": "^3.2.0",
    "outdent": "^0.8.0",
    "unionfs": "^4.4.0",
    "webpack": "^4.43.0",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "@pvtnbr/eslint-config-base": "^0.1.9",
    "byte-size": "^7.0.0",
    "chalk": "^4.0.0",
    "cli-simple-table": "1.0.1",
    "gzip-size": "^6.0.0",
    "lodash": "^4.17.15",
    "minimist": "^1.2.5"
  },
  "eslintConfig": {
    "extends": "@pvtnbr/eslint-config-base"
  }
}
